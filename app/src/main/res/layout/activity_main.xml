<LinearLayout android:id="@+id/main_view"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pavement_green"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="50dp">

        <ImageView
            android:id="@+id/bike_notification_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            android:src="@drawable/bike_white"/>

        <Button
            android:id="@+id/start_stop_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/circle_button_shape_go"
            android:text="@string/start_txt"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

    </LinearLayout>

</LinearLayout>
